<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:MoneyTakeOver.Views"
       x:Class="MoneyTakeOver.AppShell">

    <!-- Definición de las pestañas -->
    <TabBar>
        <Tab Title="Configuracion" >
            <ShellContent ContentTemplate="{DataTemplate views:Configuracion}" />
        </Tab>

        <Tab Title="CambioBase" >
            <ShellContent ContentTemplate="{DataTemplate views:CambioBase}" />
        </Tab>
    </TabBar>

</Shell>
