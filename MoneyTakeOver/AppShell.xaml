<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:MoneyTakeOver.Views"
       xmlns:local="clr-namespace:MoneyTakeOver.Models"
       x:Class="MoneyTakeOver.AppShell">

    <!-- Definición de las pestañas -->
    <TabBar>
        <Tab Title="Cotizacion" 
            >
        

            
            
            
            <ShellContent ContentTemplate="{DataTemplate views:CambioBase}"
                 />
        </Tab>


        <Tab Title="Cambio" >
            <ShellContent ContentTemplate="{DataTemplate views:MonedasView}" />
        </Tab>
       

        <Tab Title="Configuracion" >
            <ShellContent ContentTemplate="{DataTemplate views:Configuracion}" />
        </Tab>

       
    </TabBar>

</Shell>
