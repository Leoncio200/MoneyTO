<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyTakeOver.Views.EditarConfiguracion"
             Title="Editar Configuracion"
              NavigationPage.HasNavigationBar="False">

    <StackLayout Padding="20" Spacing="15">
        <Label Text="Editar Configuración" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

        <Entry x:Name="NombreEntry" Placeholder="Nombre de la Casa" />
        <Entry x:Name="DireccionEntry" Placeholder="Dirección" />
        <Entry x:Name="CiudadEntry" Placeholder="Ciudad" />
        <Entry x:Name="EstadoEntry" Placeholder="Estado" />
        <Entry x:Name="HorarioInicioEntry" Placeholder="Horario de Inicio" />
        <Entry x:Name="HorarioCierreEntry" Placeholder="Horario de Cierre" />

        <Button Text="Guardar" BackgroundColor="Green" TextColor="White" Clicked="OnGuardarClicked" />
    </StackLayout>
</ContentPage>
