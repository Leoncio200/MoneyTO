<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyTakeOver.Views.CambioBase"
             Title="CambioBase">
    <StackLayout>
        
        <StackLayout Orientation="Horizontal">
            <Image Source="money_logo.jpg" Aspect="AspectFit" HeightRequest="100"/>
            <Label Text="Cambio Base" VerticalOptions="FillAndExpand" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand" FontSize="30" TextColor="ForestGreen"/>
        </StackLayout>

        <StackLayout VerticalOptions="FillAndExpand" Margin="20,30,20,0">
            <Label Text="Elige la moneda de base" HeightRequest="100" FontSize="20" HorizontalTextAlignment="Center" TextColor="ForestGreen"/>
            <Picker VerticalOptions="StartAndExpand" Title="Origen"/>
        </StackLayout>

        <StackLayout VerticalOptions="FillAndExpand">
            <StackLayout Margin="20,0" Orientation="Horizontal" Spacing="10">
                <Button Text="Cancelar" BackgroundColor="Firebrick" CornerRadius="100" HorizontalOptions="FillAndExpand"/>
                <Button Text="Aceptar" BackgroundColor="PaleGreen" CornerRadius="100" HorizontalOptions="FillAndExpand" Clicked="Button_Clicked"/>
            </StackLayout>
            
        </StackLayout>
    
    </StackLayout>
</ContentPage>