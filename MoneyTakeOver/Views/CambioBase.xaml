<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyTakeOver.Views.CambioBase"
             Title="CambioBase">
    <StackLayout>
        
        <StackLayout Orientation="Horizontal">
            <Image Source="dotnet_bot.png" />
            <Label Text="Cambio Base"/>
        </StackLayout>

        <StackLayout>
            <Label Text="Elige la moneda de base"/>
        </StackLayout>
    
        <StackLayout>
            <Picker />
        </StackLayout>

        <StackLayout Margin="20,0">
            <Button Text="Cancelar" BackgroundColor="PaleGreen" CornerRadius="100" HorizontalOptions="FillAndExpand"/>
            <Button Text="Aceptar" BackgroundColor="Firebrick" CornerRadius="100" HorizontalOptions="FillAndExpand"/>
        </StackLayout>
    
    </StackLayout>
</ContentPage>